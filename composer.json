{
  "name": "sethorax/typo3-assetsloader",
  "description": "Loads CSS and JS asynchronously to increase page performance.",
  "type": "typo3-cms-extension",
  "version": "0.1.0",
  "license": "GPL-3.0+",
  "keywords": [
    "TYPO3",
    "CMS",
    "typo3",
    "frontend",
    "assets",
    "js",
    "css",
    "pagespeed"
  ],
  "replace": {
    "assetsloader": "self.version",
    "typo3-ter/assetsloader": "self.version"
  },
  "authors": [
    {
      "name": "Sethorax",
      "email": "info@sethorax.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "typo3/cms-core": "^7.6.10 || >=8.7.0 <9"
  },
  "require-dev": {
    "typo3/testing-framework": "^1.0",
    "nimut/testing-framework": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Sethorax\\Assetsloader\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sethorax\\Assetsloader\\Tests\\": "Tests/",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/assetsloader ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/assetsloader"
    ],
    "test": "export TYPO3_PATH_WEB=`pwd`/.Build/Web; .Build/bin/phpunit --colors -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
